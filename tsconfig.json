{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "types/nativewind.d.ts",
        "declaration.d.ts", // Add this line if nativewind.d.ts is in a custom directory
        "nativewind-env.d.ts"
    ]
}
